<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

<addon id="repository.gbtech" name="[COLOR dodgerblue]GBTech[/COLOR] Repo" version="0.1.7" provider-name="GaiaBuildsTech">
	<extension point="xbmc.addon.repository" name="GBTech Repo">
		<info compressed="false">https://raw.githubusercontent.com/GBTechWizard/repo/master/zips/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/GBTechWizard/repo/master/zips/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/GBTechWizard/repo/master/zips/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>GaiaBuildsTech Repository</summary>
		<description>Home of the GaiaBuildsTech Wizard</description>
		<platform>all</platform>
	</extension>
</addon>

<addon id="plugin.program.gbtwizard" name="GBTech Wizard" version="0.1.7" provider-name="GBTech">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">GBTech Wizard</summary>
    <description lang="en">GBTech Wizard allows you to get access to the latest GBTech Custom Builds.</description>
    <platform>all</platform>
  </extension>
</addon>

</addons>
